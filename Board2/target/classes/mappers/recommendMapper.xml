<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="recommend">
	<insert id="insert">
		INSERT INTO recommend (bno, mno) VALUES (#{bno}, #{mno});
	</insert>
	<select id="select" resultType="int" parameterType="java.util.HashMap">
		SELECT count(*) FROM recommend WHERE bno = #{bno} AND mno = #{mno};
	</select>

</mapper>